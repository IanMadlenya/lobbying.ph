<%= erb :_cover %>
<div class="container">

  <h1> Lobbyists <a class="view-more" href="/graphdata?search=<%= params[:search] %>">(Visualize)</a> </h1>

  <ul class="lobbyists">
  <% @lobbyists.each do |lobbyist| %>
    <li class="lobbyist">
      <h2><a class="title-link" href="/lobbyist/<%= lobbyist.id %>"><%= lobbyist.name %></a></h2>
      <ul>
        <li class="address">
          <%= address_string lobbyist %>
        </li>
        <li class="phone">
          <%= lobbyist.phone %>
        </li>
        <li class="email">
          <%= link_to "mailto:#{lobbyist.email}", lobbyist.email %>
        </li>
      </ul>
    </li>
  <% end %>
  </ul>

  <h1> Firms </h1>

  <ul class="lobbyists">
  <% @firms.each do |firm| %>
    <li class="lobbyist">
      <h2><a class="title-link" href="/firm/<%= firm.id %>"><%= firm.name %></a></h2>
      <ul>
        <li class="address">
          <%= address_string firm %>
        </li>
        <li class="phone">
          <%= firm.phone %>
        </li>
        <li class="email">
          <%= link_to "mailto:#{firm.email}", firm.email %>
        </li>
      </ul>
    </li>
  <% end %>
  </ul>

  <h1> Principals </h1>

  <ul class="lobbyists">
  <% @principals.each do |principal| %>
    <li class="lobbyist">
      <h2><a class="title-link" href="/principal/<%= principal.id %>"><%= principal.name %></a></h2>
      <ul>
        <li class="address">
          <%= address_string principal %>
        </li>
        <li class="phone">
          <%= principal.phone %>
        </li>
        <li class="email">
          <%= link_to "mailto:#{principal.email}", principal.email %>
        </li>
      </ul>
    </li>
  <% end %>
  </ul>

</div>
